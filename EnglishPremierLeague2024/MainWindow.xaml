        <Label x:Name="lblEmail" Content="Email
               " HorizontalAlignment="Left" Margin="119,198,0,0" VerticalAlignment="Top" Height="34" Width="199" FontFamily="Bahnschrift Light" HorizontalContentAlignment="Center" FontSize="16" Foreground="#FF6A1111" FontWeight="Bold" Background="#00000000"/>
